<% include ../partials/header %>

    <div class="row">
    
        <h1 style="text-align: center">Add a new song</h1>
    
        <div style="width: 30%; margin: 25px auto;">
            <form action = "/songs" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Add a new song">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="artist" placeholder="Artist">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Post an image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="album" placeholder="Album">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type = "submit">
                </div>
            </form>
              <a href="/songs">Go back!</a>
        </div>
    </div>


<% include ../partials/footer %>