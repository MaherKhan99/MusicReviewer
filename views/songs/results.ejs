<% include ../partials/header %>

    <div class="row">
    
        <h1 style="text-align: center">Results for <%=name%>:</h1>
            <div style="width: 50%; margin: 25px auto;">
            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% data["results"].forEach(function(song){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail" id="results-thumbnail">
                        <img src="https://cdn.vox-cdn.com/thumbor/6GcQn-hFlof-V60i88eCgSiY66o=/0x0:819x548/1200x800/filters:focal(345x209:475x339)/cdn.vox-cdn.com/uploads/chorus_image/image/60773701/Screen_Shot_2018_08_08_at_6.54.35_PM.0.png">
                        <div class="caption">
                            <h5><%= song["trackName"] %></h5>
                            <h6><%= song["artistName"] %></h6>  
                            <a target = "_blank" href="https://www.youtube.com/results?search_query=<%= song["trackName"] %>+<%= song["artistName"] %>" class="btn btn-xs btn-primary">Listen to it here!</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
                <div style="padding: 10px;">
                    <a href="/songs/search">Search for another song or artist!</a>
                </div>
            </div>
    </div>


<% include ../partials/footer %>