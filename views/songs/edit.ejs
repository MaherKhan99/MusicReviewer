<% include ../partials/header %>


    <div class="row">
    
        <h1 style="text-align: center">Edit <%=song.name%></h1>
    
        <div style="width: 30%; margin: 25px auto;">
            <form action = "/songs/<%=song._id%>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="song[name]" value="<%=song.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[artist]" value="<%= song.artist %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[image]" value="<%=song.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[album]" value="<%=song.album%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[link]" value="<%=song.link%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type = "submit">
                </div>
            </form>
              <a href="/songs">Go back!</a>
        </div>
    </div>

<% include ../partials/footer %>